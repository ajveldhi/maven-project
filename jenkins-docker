pipeline {
    agent any
    stages{
        stage('build'){
            steps{
                sh 'mvn clean package'
                sh "docker build . -t tomcatwebapp:${env.BUILD}"
            }
        }
        stage('Deploy on container'){
            steps{
                sh "docker container rm -f $(docker container ps -qa)"
                sh "docker run -p 8181:8080 -d tomcatwebapp:${env.BUILD}"
            }
        }
    }
}
